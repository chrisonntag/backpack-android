<resources>

    <!-- Base application theme. -->
    <style name="BackpackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="BackpackTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BackpackTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="BackpackTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontPath">fonts/overpass-extrabold.ttf</item>
    </style>

</resources>
